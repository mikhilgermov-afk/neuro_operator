FROM pytorch/pytorch:2.4.0-cuda12.1-cudnn9-runtime

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends ffmpeg libsndfile1 curl ca-certificates && rm -rf /var/lib/apt/lists/*

COPY requirements.voice.txt /requirements.txt
RUN pip install --no-cache-dir -r /requirements.txt

COPY app /app

ENV PYTHONUNBUFFERED=1
